{% extends 'base.html.twig' %}

{% block title %}Détails de la tâche{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">Détails de la tâche</h1>
            <span class="badge bg-{{ task.status ? 'success' : 'warning' }} ms-2">
                {{ task.status ? 'Terminée' : 'En cours' }}
            </span>
        </div>
        <div class="card-body">
            <h2 class="card-title h4">{{ task.title }}</h2>
            <p class="card-text">
                <small class="text-muted">Créée le {{ task.createdAt ? task.createdAt|date('d/m/Y à H:i') : '' }}</small>
            </p>
            
            {% if task.description %}
                <div class="mt-3">
                    <h3 class="h5">Description :</h3>
                    <p>{{ task.description|nl2br }}</p>
                </div>
            {% else %}
                <p class="text-muted">Pas de description</p>
            {% endif %}
        </div>
        <div class="card-footer d-flex justify-content-between">
            <div>
                <a href="{{ path('app_task_index') }}" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
                <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i> Modifier
                </a>
            </div>
            {{ include('task/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}